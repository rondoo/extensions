@using Signum.Entities.Files
@using (var e = Html.TypeContext<FileRepositoryDN>())
{
    @Html.ValueLine(e, f => f.Name)
    @Html.ValueLine(e, f => f.Active)
    @Html.ValueLine(e, f => f.PhysicalPrefix)
    @Html.ValueLine(e, f => f.WebPrefix)
    @Html.EntityList(e, f => f.FileTypes)
    if (!e.Value.IsNew)
    {
        @Html.CountSearchControl(e, new FindOptions(typeof(FilePathDN), "Repository", e.Value), csc =>
    {
        csc.PopupViewPrefix = "files";
    });
    }
}