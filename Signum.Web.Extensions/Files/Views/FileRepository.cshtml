@using Signum.Entities.Files
@using (var e = Html.TypeContext<FileRepositoryEntity>())
{
    @Html.ValueLine(e, f => f.Name)
    @Html.ValueLine(e, f => f.Active)
    @Html.ValueLine(e, f => f.PhysicalPrefix)
    @Html.ValueLine(e, f => f.WebPrefix)
    @Html.EntityList(e, f => f.FileTypes)
    if (!e.Value.IsNew)
    {
    @Html.CountSearchControl(new FindOptions(typeof(FilePathEntity), "Repository", e.Value),
    new Context(e, "repos"), csc => { csc.View = true; });
    }
}