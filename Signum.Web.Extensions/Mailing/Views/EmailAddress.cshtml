@using Signum.Entities.Mailing

@using (var sc = Html.TypeContext<EmailAddressDN>())
{
    sc.PlaceholderLabels = true;
    sc.FormGroupStyle = FormGroupStyle.SrOnly;
    <div class="row form-vertical">
        <div class="col-sm-4 col-sm-offset-1">
             @Html.EntityLine(sc, ea => ea.EmailOwner)
        </div>
         <div class="col-sm-3">
                @Html.ValueLine(sc, c => c.EmailAddress)
         </div>
         <div class="col-sm-3">
               @Html.ValueLine(sc, c => c.DisplayName, vl => vl.ValueHtmlProps.Add("style", "width:250px"))
         </div>
    </div>
}
