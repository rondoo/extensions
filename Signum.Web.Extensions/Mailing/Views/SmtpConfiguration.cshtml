@using Signum.Entities.Mailing

@using (var sc = Html.TypeContext<SmtpConfigurationEntity>())
{
    @Html.ValueLine(sc, s => s.Name)
    @Html.ValueLine(sc, s => s.DeliveryFormat)
    @Html.ValueLine(sc, s => s.DeliveryMethod)
    @Html.EntityDetail(sc, s => s.Network)
	@Html.ValueLine(sc, s => s.PickupDirectoryLocation)
