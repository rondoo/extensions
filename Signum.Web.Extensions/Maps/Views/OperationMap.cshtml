@using Signum.Web.Maps;
@using System.Reflection;
@using Newtonsoft.Json;
@using Signum.Entities.Map;
@model OperationMapInfo
@Html.ScriptCss("~/Maps/Content/operationMap.css")

<div class="form-inline form-sm container" style="margin-top: 10px;">
    <div class="form-group">
        <label for="color">@MapMessage.Color.NiceToString()</label>
        <select class="form-control" id="color">
            <option value="state">@MapMessage.StateColor.NiceToString()</option>
            <option value="rows">@MapMessage.Rows.NiceToString()</option>
        </select>
    </div>
    <span style="margin-left: 10px;">
        @MapMessage.Press0ToExploreStatesAndOperations.NiceToString().FormatHtml(new HtmlTag("u").SetInnerText("Ctrl + Click"))
    </span>
</div>
<div id="map" style="background-color:white">
    <svg id="svgMap">
        <defs>
            <marker id="normal_arrow" viewBox="0 -5 10 10" refX="10" refY="0" markerWidth="10" markerHeight="10" orient="auto">
                <path fill="gray" d="M0,0L0,-5L10,0L0,5L0,0" />
            </marker>
        </defs>
    </svg>
</div>
<script>
    @MapClient.OperationModule["createMap"]("map", "svgMap", "color", Model)
</script>