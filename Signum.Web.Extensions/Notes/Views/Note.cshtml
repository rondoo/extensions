@using Signum.Entities.Notes
@using (var cp = Html.TypeContext<NoteEntity>())
{
    @Html.ValueLine(cp, d => d.CreationDate, vl => vl.ReadOnly = true)
    @Html.EntityLine(cp, d => d.Target, vl => vl.ReadOnly = true)
    @Html.ValueLine(cp, d => d.Title)
    @Html.EntityCombo(cp, d => d.NoteType, ec=>ec.Remove = true)
    @Html.ValueLine(cp, d => d.Text, vl =>
    {
        vl.ValueLineType = ValueLineType.TextArea;
        vl.ValueHtmlProps["rows"] = 6;
        vl.ValueHtmlProps["cols"] = 100;
    })
}